<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/provaLL"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:baselineAligned="false"
    android:orientation="horizontal" >

    <FrameLayout
        android:id="@+id/camera_preview"
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_weight="1" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <Button
            android:id="@+id/button_switch"
            style="?android:attr/buttonBarButtonStyle"
           	android:text="@string/reverse"
           	android:textSize="0pt"
           	android:textColor="#ff000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:drawableTop="@drawable/ic_switch_photo_facing" />

        <Button
            android:id="@+id/button_capture"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="false"
            android:layout_centerVertical="true"
            android:drawableBottom="@android:drawable/ic_menu_camera"
            android:text="@string/capture" />
              
        <Button
            android:id="@+id/button_cmultiple"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="false"
            android:layout_below="@+id/button_capture"
            android:drawableBottom="@android:drawable/ic_menu_rotate"
            android:text="@string/multiple" />        
      
               
        <RadioGroup
            android:id="@+id/radioFlash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <RadioButton
                android:id="@+id/flash1"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="@string/flash"
                android:textSize="6pt" />

            <RadioButton
                android:id="@+id/noflash1"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="@string/noflash"
                android:textSize="6pt" />

            <RadioButton
                android:id="@+id/autoflash1"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="@string/autoflash"
                android:textSize="6pt" />
        </RadioGroup>



    </RelativeLayout>

</LinearLayout>